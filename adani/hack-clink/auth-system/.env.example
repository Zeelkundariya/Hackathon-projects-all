# MongoDB connection settings
# For local MongoDB Community Server, this usually works:
MONGO_URI=mongodb://localhost:27017

# Database + collection names
MONGO_DB_NAME=auth_system
MONGO_USERS_COLLECTION=users

# -------------------------
# Phase 6: App environment
# -------------------------
# development | production
APP_ENV=development

# Session timeout (in minutes)
SESSION_TIMEOUT_MINUTES=60

# -------------------------
# Phase 6: Logging
# -------------------------
LOG_LEVEL=INFO
LOG_DIR=logs
AUDIT_LOG_TO_MONGO=true

# -------------------------
# Phase 6: Solver defaults
# -------------------------
SOLVER_TIME_LIMIT_SECONDS=60
SOLVER_MIP_GAP=0.01
SOLVER_LOGS_ENABLED=true
